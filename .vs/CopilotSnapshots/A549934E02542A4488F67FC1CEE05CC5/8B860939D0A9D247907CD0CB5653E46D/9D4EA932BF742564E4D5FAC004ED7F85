<body>

    <div class="container">
        <h1 class="title">
            <span class="title-letter">H</span>
            <span class="title-letter">a</span>
            <span class="title-letter">p</span>
            <span class="title-letter">p</span>
            <span class="title-letter">y</span>
            &nbsp;
            <span class="title-letter">B</span>
            <span class="title-letter">i</span>
            <span class="title-letter">r</span>
            <span class="title-letter">t</span>
            <span class="title-letter">h</span>
            <span class="title-letter">d</span>
            <span class="title-letter">a</span>
            <span class="title-letter">y</span>
        </h1>
        <p class="date" id="dateTag">18 February 2026</p>
        
        <div class="char-container">
            <div class="controller-grid">
                <video src="videos/Controller.mp4" autoplay loop muted playsinline></video>
                <video src="videos/Controller3.mp4" autoplay loop muted playsinline></video>
                <video src="videos/Controller4.mp4" autoplay loop muted playsinline></video>
            </div>
        </div>

        <div class="name-tag" id="nameTag">Kaison Jude Prins</div>

        
        <button id="openBtn">Open Your Gift 🎁</button>
    </div>

    <div id="cardModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <video id="gamer-video" loop muted playsinline autoplay controls style="width:200px; height:200px; margin:0 auto; display:block;">
                <source src="videos/Cool Gamer.mp4" type="video/mp4">
                <source src="videos/Gamer.mov" type="video/quicktime">
                Your browser does not support the video tag.
            </video>
            <div id="video-fallback" style="display:none; margin-top:12px; color:#c00;">
                Can't play the video inline. <a id="video-open-link" href="videos/Cool%20Gamer.mp4" target="_blank" rel="noopener">Open video in a new tab</a>
            </div>
            <h3>Level Up! 🎮</h3>
            <p class="message" id="messageText">"You are a very special boy. I wish you all the best, lots of health, and lots of joy. Happy Birthday!"</p>
            <div id="heart-container"></div>
        </div>
    </div>

    <script>
        const modal = document.getElementById("cardModal");
        const btn = document.getElementById("openBtn");
        const span = document.querySelector(".close");
        const heartContainer = document.getElementById("heart-container");
        const gamerVideo = document.getElementById("gamer-video");
        const titleLetters = document.querySelectorAll(".title-letter");

        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const customName = urlParams.get('name');
        const customMessage = urlParams.get('message');
        const customDate = urlParams.get('date');

        // Load saved values from localStorage
        const savedName = localStorage.getItem('birthdayName');
        const savedMessage = localStorage.getItem('birthdayMessage');
        const savedDate = localStorage.getItem('birthdayDate');

        // Update name (URL params take precedence over saved values)
        if (customName) {
            document.getElementById('nameTag').textContent = customName;
        } else if (savedName) {
            document.getElementById('nameTag').textContent = savedName;
        }

        // Update message (URL params take precedence over saved values)
        if (customMessage) {
            document.getElementById('messageText').textContent = customMessage;
        } else if (savedMessage) {
            document.getElementById('messageText').textContent = savedMessage;
        }

        // Update date (URL params take precedence over saved values)
        if (customDate) {
            document.getElementById('dateTag').textContent = customDate;
        } else if (savedDate) {
            document.getElementById('dateTag').textContent = savedDate;
        }

        // Make name tag editable on click
        const nameTag = document.getElementById('nameTag');
        nameTag.addEventListener('click', function() {
            const currentName = nameTag.textContent;
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentName;
            input.className = 'name-input';
            
            nameTag.replaceWith(input);
            input.focus();
            input.select();

            function saveName() {
                const newName = input.value.trim() || currentName;
                const newNameTag = document.createElement('div');
                newNameTag.className = 'name-tag';
                newNameTag.id = 'nameTag';
                newNameTag.textContent = newName;
                
                // Save to localStorage
                localStorage.setItem('birthdayName', newName);
                
                input.replaceWith(newNameTag);
                
                // Re-attach click event to new element
                newNameTag.addEventListener('click', arguments.callee.bind(nameTag));
            }

            input.addEventListener('blur', saveName);
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    saveName();
                }
            });
        });

        // Make date tag editable on click
        const dateTag = document.getElementById('dateTag');
        dateTag.addEventListener('click', function() {
            const currentDate = dateTag.textContent;
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentDate;
            input.className = 'date-input';
            
            dateTag.replaceWith(input);
            input.focus();
            input.select();

            function saveDate() {
                const newDate = input.value.trim() || currentDate;
                const newDateTag = document.createElement('p');
                newDateTag.className = 'date';
                newDateTag.id = 'dateTag';
                newDateTag.textContent = newDate;
                
                // Save to localStorage
                localStorage.setItem('birthdayDate', newDate);
                
                input.replaceWith(newDateTag);
                
                // Re-attach click event to new element
                newDateTag.addEventListener('click', arguments.callee.bind(dateTag));
            }

            input.addEventListener('blur', saveDate);
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    saveDate();
                }
            });
        });

        // Make message editable on click
        const messageText = document.getElementById('messageText');
        messageText.addEventListener('click', function() {
            const currentMessage = messageText.textContent;
            const textarea = document.createElement('textarea');
            textarea.value = currentMessage;
            textarea.className = 'message-input';
            
            messageText.replaceWith(textarea);
            textarea.focus();
            textarea.select();

            function saveMessage() {
                const newMessage = textarea.value.trim() || currentMessage;
                const newMessageText = document.createElement('p');
                newMessageText.className = 'message';
                newMessageText.id = 'messageText';
                newMessageText.textContent = newMessage;
                
                // Save to localStorage
                localStorage.setItem('birthdayMessage', newMessage);
                
                textarea.replaceWith(newMessageText);
                
                // Re-attach click event to new element
                newMessageText.addEventListener('click', arguments.callee.bind(messageText));
            }

            textarea.addEventListener('blur', saveMessage);
            textarea.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && e.ctrlKey) {
                    saveMessage();
                }
            });
        });

        btn.onclick = () => {
            modal.style.display = "block";
            if (gamerVideo) {
                gamerVideo.currentTime = 0;
                const playPromise = gamerVideo.play();
                if (playPromise && playPromise.catch) {
                    playPromise.catch(err => {
                        console.error('gamer-video play failed:', err);
                        const vf = document.getElementById('video-fallback');
                        if (vf) vf.style.display = 'block';
                    });
                }
            }
            for (let i = 0; i < 30; i++) { setTimeout(createHeart, i * 60); }
        };

        span.onclick = () => {
            modal.style.display = "none";
            if (gamerVideo) gamerVideo.pause();
        };
        window.onclick = (e) => {
            if (e.target == modal) {
                modal.style.display = "none";
                if (gamerVideo) gamerVideo.pause();
            }
        };

        function createShape(clickX, clickY) {
            const symbols = ["■", "▲", "✖", "●"];
            const colors = ["#ff6ec7", "#00e6a8", "#5da9ff", "#ff4b4b", "#ffd700", "#00ff00", "#ff00ff", "#00ffff"];
            
            // Create massive explosion to fill screen
            const numShapes = 80 + Math.floor(Math.random() * 40);
            
            for (let i = 0; i < numShapes; i++) {
                setTimeout(() => {
                    const index = Math.floor(Math.random() * symbols.length);
                    const shape = document.createElement("div");
                    shape.className = "shape-symbol";
                    shape.textContent = symbols[index];
                    shape.style.color = colors[Math.floor(Math.random() * colors.length)];
                    
                    // Random size variation
                    const size = 1.5 + Math.random() * 2;
                    shape.style.fontSize = size + 'rem';
                    
                    // Position at click location
                    shape.style.left = clickX + 'px';
                    shape.style.top = clickY + 'px';
                    
                    // Random direction and much larger distance for full screen coverage
                    const angle = Math.random() * Math.PI * 2;
                    const distance = 200 + Math.random() * 800;
                    const tx = Math.cos(angle) * distance;
                    const ty = Math.sin(angle) * distance;
                    const rotate = Math.random() * 1440 - 720;
                    
                    shape.style.setProperty('--tx', tx + 'px');
                    shape.style.setProperty('--ty', ty + 'px');
                    shape.style.setProperty('--rotate', rotate + 'deg');
                    
                    document.body.appendChild(shape);
                    setTimeout(() => shape.remove(), 3000);
                }, i * 15);
            }
        }

        function createHeart() {
            const heart = document.createElement("div");
            heart.className = "heart";
            heart.innerHTML = "❤️";
            heart.style.left = Math.random() * 90 + "%";
            heart.style.top = "60%";
            heartContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 3000);
        }

        titleLetters.forEach(letter => {
            letter.addEventListener("click", (e) => {
                const rect = letter.getBoundingClientRect();
                const clickX = rect.left + rect.width / 2;
                const clickY = rect.top + rect.height / 2;
                createShape(clickX, clickY);
            });
        });

        if (gamerVideo) {
            gamerVideo.addEventListener('error', (e) => {
                console.error('gamer-video error', e);
                const vf = document.getElementById('video-fallback');
                if (vf) vf.style.display = 'block';
            });
            gamerVideo.addEventListener('loadeddata', () => { console.log('gamer-video loadeddata, readyState=', gamerVideo.readyState); });
        }

        // Make controller videos replaceable
        const controllerVideos = document.querySelectorAll('.controller-grid video');
        controllerVideos.forEach((video, index) => {
            video.addEventListener('click', function() {
                const fileInput = document.createElement('input');
                fileInput.type = 'file';
                fileInput.accept = 'video/*';
                
                fileInput.addEventListener('change', function(e) {
                    const file = e.target.files[0];
                    if (file) {
                        const videoURL = URL.createObjectURL(file);
                        video.src = videoURL;
                        video.load();
                        video.play().catch(err => console.error('Video play error:', err));
                    }
                });
                
                fileInput.click();
            });
        });

        // Make modal video replaceable
        if (gamerVideo) {
            gamerVideo.addEventListener('click', function(e) {
                // Only trigger if not playing/pausing via controls
                if (e.target === gamerVideo) {
                    const fileInput = document.createElement('input');
                    fileInput.type = 'file';
                    fileInput.accept = 'video/*';
                    
                    fileInput.addEventListener('change', function(e) {
                        const file = e.target.files[0];
                        if (file) {
                            const videoURL = URL.createObjectURL(file);
                            gamerVideo.src = videoURL;
                            gamerVideo.load();
                            gamerVideo.play().catch(err => console.error('Video play error:', err));
                        }
                    });
                    
                    fileInput.click();
                }
            });
        }
    </script>
</body>
</html>
