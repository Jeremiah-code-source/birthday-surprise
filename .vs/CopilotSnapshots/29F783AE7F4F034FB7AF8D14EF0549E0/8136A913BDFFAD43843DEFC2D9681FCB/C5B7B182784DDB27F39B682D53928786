    <div id="cardModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <video id="gamer-video" loop muted playsinline autoplay controls style="width:200px; height:200px; margin:0 auto; display:block;">
                <source src="videos/Cool Gamer.mp4" type="video/mp4">
                <source src="videos/Gamer.mov" type="video/quicktime">
                Your browser does not support the video tag.
            </video>
            <div id="video-fallback" style="display:none; margin-top:12px; color:#c00;">
                Can't play the video inline. <a id="video-open-link" href="videos/Cool%20Gamer.mp4" target="_blank" rel="noopener">Open video in a new tab</a>
            </div>
            <h3>Level Up! 🎮</h3>
            <p class="message" id="messageText">"You are a very special boy. I wish you all the best, lots of health, and lots of joy. Happy Birthday!"</p>
            <div id="heart-container"></div>
        </div>
    </div>

    <script>
        const modal = document.getElementById("cardModal");
        const btn = document.getElementById("openBtn");
        const span = document.querySelector(".close");
        const heartContainer = document.getElementById("heart-container");
        const gamerVideo = document.getElementById("gamer-video");
        const titleLetters = document.querySelectorAll(".title-letter");

        // Get URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const customName = urlParams.get('name');
        const customMessage = urlParams.get('message');

        // Update name if provided
        if (customName) {
            document.getElementById('nameTag').textContent = customName;
        }

        // Update message if provided
        if (customMessage) {
            document.getElementById('messageText').textContent = customMessage;
        }

        // Make name tag editable on click
        const nameTag = document.getElementById('nameTag');
        nameTag.addEventListener('click', function() {
            const currentName = nameTag.textContent;
            const input = document.createElement('input');
            input.type = 'text';
            input.value = currentName;
            input.className = 'name-input';
            
            nameTag.replaceWith(input);
            input.focus();
            input.select();

            function saveName() {
                const newName = input.value.trim() || currentName;
                const newNameTag = document.createElement('div');
                newNameTag.className = 'name-tag';
                newNameTag.id = 'nameTag';
                newNameTag.textContent = newName;
                
                input.replaceWith(newNameTag);
                
                // Re-attach click event to new element
                newNameTag.addEventListener('click', arguments.callee.bind(nameTag));
            }

            input.addEventListener('blur', saveName);
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    saveName();
                }
            });
        });

        btn.onclick = () => {
            modal.style.display = "block";
            if (gamerVideo) {
                gamerVideo.currentTime = 0;
                const playPromise = gamerVideo.play();
                if (playPromise && playPromise.catch) {
                    playPromise.catch(err => {
                        console.error('gamer-video play failed:', err);
                        const vf = document.getElementById('video-fallback');
                        if (vf) vf.style.display = 'block';
                    });
                }
            }
            for (let i = 0; i < 30; i++) { setTimeout(createHeart, i * 60); }
        };

        span.onclick = () => {
            modal.style.display = "none";
            if (gamerVideo) gamerVideo.pause();
        };
        window.onclick = (e) => {
            if (e.target == modal) {
                modal.style.display = "none";
                if (gamerVideo) gamerVideo.pause();
            }
        };

        function createShape() {
            const symbols = ["■", "▲", "✖", "●"];
            const colors = ["#ff6ec7", "#00e6a8", "#5da9ff", "#ff4b4b"];
            const index = Math.floor(Math.random() * symbols.length);

            const shape = document.createElement("div");
            shape.className = "shape-symbol";
            shape.textContent = symbols[index];
            shape.style.color = colors[index];
            shape.style.left = (10 + Math.random() * 80) + "%";
            shape.style.top = "30%";

            document.body.appendChild(shape);
            setTimeout(() => shape.remove(), 2000);
        }

        function createHeart() {
            const heart = document.createElement("div");
            heart.className = "heart";
            heart.innerHTML = "❤️";
            heart.style.left = Math.random() * 90 + "%";
            heart.style.top = "60%";
            heartContainer.appendChild(heart);
            setTimeout(() => heart.remove(), 3000);
        }

        titleLetters.forEach(letter => {
            letter.addEventListener("click", () => {
                createShape();
            });
        });

        if (gamerVideo) {
            gamerVideo.addEventListener('error', (e) => {
                console.error('gamer-video error', e);
                const vf = document.getElementById('video-fallback');
                if (vf) vf.style.display = 'block';
            });
            gamerVideo.addEventListener('loadeddata', () => { console.log('gamer-video loadeddata, readyState=', gamerVideo.readyState); });
        }
    </script>
</body>
</html>
